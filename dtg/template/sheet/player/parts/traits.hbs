
<section class="dtg-part part-traits" data-part-id="traits" aria-label="Traits">

    <div class="traits-wrap">
        <div class="traits-grid">
            {{!-- Strength --}}
            <article class="trait-card" data-trait="strength">
                <label class="trait-label" for="trait-strength">Strength</label>
                <input id="trait-strength"
                       class="trait-input"
                       type="number" step="1" inputmode="numeric"
                       name="system.traits.strength"
                       value="{{system.traits.strength}}" />
                <button type="button"
                        class="trait-roll-btn"
                        data-action="rollDuality"
                        data-trait="strength">Roll</button>
            </article>

