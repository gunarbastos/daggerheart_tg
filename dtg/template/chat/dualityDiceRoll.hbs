                {{#each roll.base}}
                    <section class="tooltip-part">
                        <div class="dice">
                            <header class="part-header flexrow">
                                <span class="part-formula">{{capitalize this.description}}: {{this.roll.formula}}</span>
                                <span class="part-total">{{absolute this.total}}</span>
                            </header>
                            <ol class="dice-rolls">
                                {{#each this.roll.terms as |term|}}
                                    {{#each term.results as |result|}}
                                        <li class="roll die{{#if term.faces}} d{{term.faces}}{{/if}}{{#unless result.active}} discarded{{/unless}}">{{{result.result}}}</li>
                                    {{/each}}
                                {{/each}}
                            </ol>
                        </div>
                    </section>
                {{/each}}
                {{#each roll.bonus}}
                    <section class="tooltip-part">
                        <div class="dice">
                            <header class="part-header flexrow">
                                <span class="part-formula">{{#if this.description}}{{capitalize this.description}}{{else}}Bonus{{/if}}</span>
                                <span class="part-total">{{absolute this.total}}</span>
                            </header>
                            <ol class="dice-rolls">
                                {{#each this.roll.terms as |term|}}
                                    {{#each term.results as |result|}}
                                        <li class="roll die{{#if term.faces}} d{{term.faces}}{{/if}}{{#unless result.active}} discarded{{/unless}}">{{{result.result}}}</li>
                                    {{/each}}
                                {{/each}}
                            </ol>
                        </div>
                    </section>
                {{/each}}
            </div>
        </div>
        <h4 class="dice-total{{#if roll.isCritical}} max{{/if}}">
            {{#if roll.isCritical}}
                CRITICAL! Double {{roll.hope}}
            {{else}}
                {{roll.total}} with {{capitalize roll.state}}
            {{/if}}
        </h4>
